{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "server/main.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.10"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        }
    ]
}